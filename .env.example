# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_REALTIME_DEPLOYMENT_NAME=gpt-4o-realtime-preview
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Azure Speech Service
AZURE_SPEECH_KEY=your_speech_service_key
AZURE_SPEECH_REGION=japaneast

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=knowledge-harvest-audio

# Azure AI Search
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your_search_api_key
AZURE_SEARCH_INDEX_NAME=knowledge-harvest

# Database (Vercel Postgres / Neon)
DATABASE_URL=postgresql://your_user:your_password@your-host/neondb?sslmode=require
# Optional: uncomment if you need a non-pooled connection for migrations
# DATABASE_URL_UNPOOLED=postgresql://your_user:your_password@your-host/neondb?sslmode=require

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_TRANSCRIPTION_ENGINE=whisper # set to 'azure' to enable Azure Speech streaming

AZURE_OPENAI_REALTIME_REGION=eastus2
AZURE_OPENAI_REALTIME_API_VERSION=2025-04-01-preview
AZURE_OPENAI_REALTIME_VOICE=verse
